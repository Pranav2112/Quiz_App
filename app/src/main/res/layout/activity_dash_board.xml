<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/first_quiz_color"
    tools:context=".DashBoard">



    <RelativeLayout
        android:background="#255DEA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp">

        <ImageView
            android:id="@+id/ic_back_sathi"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/ic_exit_sathi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"/>


    </RelativeLayout>

  
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:maxHeight="@dimen/_12sdp"
        android:minHeight="@dimen/_12sdp"
        android:progress="10"
        android:max="20"
        android:theme="@style/Timer"
        app:background="@color/first_quiz_color"
        android:id="@+id/quiz_timer"></ProgressBar>




    <androidx.cardview.widget.CardView
        android:id="@+id/cardA_question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">



        <TextView
            android:id="@+id/card_question_sathi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="jhjhgjhvjhvjhg"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/cardA"
        android:onClick="OptionAClick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp">



        <TextView
            android:id="@+id/card_option_A_sathi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="A"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardB"
        android:onClick="OptionBClick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp">



        <TextView
            android:id="@+id/card_option_B_sathi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="B"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardC"
        android:onClick="OptionCClick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp">



        <TextView
            android:id="@+id/card_option_C_sathi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="C"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardD"
        android:onClick="OptionDClick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp">



        <TextView
            android:id="@+id/card_option_D_sathi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="D"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:background="@drawable/next_button_shape">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"/>

    </LinearLayout>








</LinearLayout>